<h1>Portfolio Items</h1>

<%= link_to "New Portfolio", new_portfolio_path %>

<% @portfolio_items.each do |portfolio| %>
  <p><%= portfolio.inspect %>  </p>
  <p><%= portfolio.title %></p>

  <p><%= portfolio.subtitle %></p>

  <p><%= portfolio.body %></p>
  <p><%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil? %></p>
  <p></p>

          <td><%= link_to portfolio.title, portfolio_show_path(portfolio) %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>




  <br>
  <hr>
<% end %>
